{
  "rewrites": [
    { "source": "/sitemap.xml", "destination": "https://hsybhjjtxdwtpfvcmoqk.supabase.co/functions/v1/generate-sitemap" },
    { "source": "/((?!apple-app-site-association|.well-known|robots.txt|favicon.png|images|assets).*)", "destination": "/" }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "procuresaathi.com" }],
      "destination": "https://www.procuresaathi.com/:path*",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/apple-app-site-association",
      "headers": [
        { "key": "Content-Type", "value": "application/json" }
      ]
    },
    {
      "source": "/.well-known/apple-app-site-association",
      "headers": [
        { "key": "Content-Type", "value": "application/json" }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml" }
      ]
    }
  ]
}
